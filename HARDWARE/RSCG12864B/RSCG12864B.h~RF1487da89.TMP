//-----------此处设置SCL,SDA,BUSY信号对应GPIO口--------
#define SCLGPIO   GPIOA               //SCL
#define SCLPIN    GPIO_Pin_6
#define SDAGPIO   GPIOA               //SDA
#define SDAPIN    GPIO_Pin_8
#define BUSYGPIO  GPIOA               //BUSY
#define BUSYPIN   GPIO_Pin_5

#define SCLH GPIO_SetBits(SCLGPIO,SCLPIN)
#define SCLL GPIO_ResetBits(SCLGPIO,SCLPIN)
#define SDAH GPIO_SetBits(SDAGPIO,SDAPIN)
#define SDAL GPIO_ResetBits(SDAGPIO,SDAPIN)

typedef unsigned char U8;
typedef unsigned int U16;
typedef unsigned long U32; 


/***********************************************************************
*函数原型:void I2C_Start(void)
*功    能:提供I2C时序的起始位
************************************************************************/
